{
    "version": 2,
    "installCommand": "yarn i",
    "buildCommand": "yarn build",
    "outputDirectory": "dist",
    "builds": [
        {
            "src": "package.json",
            "use": "vercel-sapper"
        },
        { "src": "./api/index.js", "use": "@vercel/node" }
     ],
    "rewrites": [{ "source": "/(.*)", "destination": "/api" }]
}